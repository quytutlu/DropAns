<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/NoiDung"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5sp"
        android:text="báº¡n"
        android:textColor="#FF0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/cauhoi"
            android:layout_width="94dp"
            android:layout_height="59dp"
            android:background="@drawable/lacoha"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="#FF0000"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="122" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50sp"
                    android:layout_height="40dp"
                    android:src="@drawable/demnguoc" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1sp"
                    android:text=": "
                    android:textColor="#FF0000"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50sp"
                    android:layout_height="40dp"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3sp"
                    android:text=": "
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:onClick="onClick"
                    android:src="@drawable/on" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/duongchan"
                android:gravity="right" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100dp"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:text="                        " />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:scrollbars = "vertical"
        android:maxLines = "2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/noidung"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/khungcauhoiha"
                android:gravity="center"
                android:padding="5sp"
                android:paddingLeft="2sp"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/A"
                android:layout_width="290dp"
                android:layout_height="55sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dapanaha"
                android:onClick="ChonA"
                android:paddingLeft="55sp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/B"
                android:layout_width="290dp"
                android:layout_height="55sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dapanbha"
                android:onClick="ChonB"
                android:paddingLeft="55sp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/C"
                android:layout_width="290dp"
                android:layout_height="55sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dapancha"
                android:onClick="ChonC"
                android:paddingLeft="55sp"
                android:paddingTop="5sp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/D"
                android:layout_width="290dp"
                android:layout_height="55sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/dapandha"
                android:onClick="ChonD"
                android:paddingLeft="55sp"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>